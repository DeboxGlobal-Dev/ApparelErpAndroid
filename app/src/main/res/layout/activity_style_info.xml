<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.HomeActivity"
        android:background="@mipmap/homebg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/navigation_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/hamberger" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@mipmap/apperalloginlogo"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/deboxicon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#3498DB"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="4"
            android:background="@drawable/white_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.25"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/styleinfocolor"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Style info"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".75"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69"
                    android:id="@+id/totalstyle_STYLEINO"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:padding="15dp"
                    android:background="@drawable/whiteblue_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Styles"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".75"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:id="@+id/projection_STYLEINO"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:padding="15dp"
                    android:background="@drawable/whiteyellow_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projection"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".75"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33"
                    android:id="@+id/onorder_STYLEINO"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:padding="15dp"
                    android:background="@drawable/whitered_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On-Order"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>


        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/style_REC"
        android:background="@drawable/white_background"/>


    </LinearLayout>