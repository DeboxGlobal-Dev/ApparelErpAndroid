<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout android:layout_width="match_parent"
            android:background="@mipmap/loginbg"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@mipmap/apperalloginlogo"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:background="@mipmap/apperalfrom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ll_clientlogin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_LOGN"
                android:hint="Email"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:maxLength="25"
                android:textColor="#000"
                android:background="#FDFEFE"
                android:textColorHint="#7F8C8D"
                android:padding="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99A3A4 "
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pass_LOGIN"
                    android:textSize="18sp"
                    android:hint="Password"
                    android:layout_marginLeft="10dp"
                    android:background="#FDFEFE"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#7F8C8D"
                    android:maxLength="25"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    tools:ignore="MissingClass" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/et_pass"
                 android:textSize="20dp"
                 android:background="#FDFEFE"
                 android:textColor="#000"
                 android:textColorHint="#7F8C8D"
                 android:padding="10dp"
                 android:layout_marginRight="15dp"/>-->


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99A3A4 "
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:text="Forget Password?"
            android:textColor="#3498DB"
            android:textSize="12sp"
            android:id="@+id/forgetpsd_LOGIN"
            android:fontFamily="@font/futura_heavy_font"
            app:fontFamily="@font/futura_heavy_font"/>

        <View
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:background="#3498DB"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="25dp"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:id="@+id/button_LOGIN"
            android:src="@drawable/rightarrow"
            android:layout_marginTop="52dp"/>

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454C38 "
        android:text="Powered by"
        android:layout_marginLeft="100dp"
        android:id="@+id/register_LOGIN"
        android:textSize="12sp"
        android:fontFamily="@font/futura_heavy_font"
        app:fontFamily="@font/futura_heavy_font"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/register_LOGIN"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>








