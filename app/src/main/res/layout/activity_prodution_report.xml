<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.HomeActivity"
    android:background="@mipmap/apparelhomebg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/hamberghome"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@mipmap/apperallogo"
            android:layout_marginTop="17.5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            android:src="@mipmap/deboxwhiteicon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>



    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#3498DB"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/produtionreportcolor"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Production"
                    android:layout_gravity="center"
                    android:textColor="#979A9A"
                    android:textSize="14sp"
                    android:fontFamily="@font/universcondensedbold"
                    app:fontFamily="@font/universcondensedbold"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:layout_gravity="center"
                    android:textColor="#979A9A"
                    android:textSize="14sp"
                    android:fontFamily="@font/universcondensedbold"
                    app:fontFamily="@font/universcondensedbold"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality Report"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#979A9A"
                    android:textSize="14sp"
                    android:fontFamily="@font/universcondensedbold"
                    app:fontFamily="@font/universcondensedbold"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/quality_chart_PR"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#979A9A"
                        android:textSize="10sp"
                        android:fontFamily="@font/universcondensedbold"
                        app:fontFamily="@font/universcondensedbold"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#979A9A"
                        android:textSize="10sp"
                        android:fontFamily="@font/universcondensedbold"
                        app:fontFamily="@font/universcondensedbold"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#979A9A"
                        android:textSize="10sp"
                        android:fontFamily="@font/universcondensedbold"
                        app:fontFamily="@font/universcondensedbold"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line4"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#979A9A"
                        android:textSize="10sp"
                        android:fontFamily="@font/universcondensedbold"
                        app:fontFamily="@font/universcondensedbold"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line5"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#979A9A"
                        android:textSize="10sp"
                        android:fontFamily="@font/universcondensedbold"
                        app:fontFamily="@font/universcondensedbold"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/graydotted_background"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FDFEFE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line-wise Prodution &amp; WIP"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#979A9A"
            android:textSize="14sp"
            android:fontFamily="@font/universcondensedbold"
            app:fontFamily="@font/universcondensedbold"/>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/wip_chart_PR"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingBottom="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/graydotted_background"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FDFEFE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productivity SAM and Efficiency"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#979A9A"
            android:textSize="14sp"
            android:fontFamily="@font/universcondensedbold"
            app:fontFamily="@font/universcondensedbold"/>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/sam_chart_PR"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingBottom="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#979A9A"
                android:textSize="10sp"
                android:fontFamily="@font/universcondensedbold"
                app:fontFamily="@font/universcondensedbold"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/graydotted_background"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>




</LinearLayout>
</androidx.core.widget.NestedScrollView>