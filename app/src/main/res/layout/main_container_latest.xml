<?xml version="1.0" encoding="utf-8"?>

<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container_lat"
    android:orientation="vertical"
    android:background="@mipmap/apparelhomebg">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navigation_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="27dp"
                android:src="@mipmap/hamberghome" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@mipmap/apperallogo"
                android:layout_marginTop="17.5dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:src="@mipmap/deboxwhiteicon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

       <!-- <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </FrameLayout>-->

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottomnavigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/item_menu"
        android:fitsSystemWindows="true"
        android:background="@drawable/nav__items_bg"
        app:itemIconTint="@drawable/tabcolor"
        app:itemTextColor="@drawable/tabtextcolor"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="20dp"
        app:itemRippleColor="@color/blue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        style="@style/BottomNavigationView"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>
</RelativeLayout>

</FrameLayout>